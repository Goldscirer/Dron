<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seweryn.dronapplication.ActivityConfigurationDron">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/downloadConfiguration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="downloadConfiguration"
                    android:text="Download configuration"/>

                <TextView
                    android:id="@+id/thrust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thrust"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kp4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kp" />

                <EditText
                    android:id="@+id/editRotor_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/ki4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ki" />

                <EditText
                    android:id="@+id/editRotor_1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/kd4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kd:" />

                <EditText
                    android:id="@+id/editRotor_1_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789."/>

                <TextView
                    android:id="@+id/tf4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tf:" />

                <EditText
                    android:id="@+id/editRotor_1_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/yaw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:text="Yaw" />

                <TextView
                    android:id="@+id/kp3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kp" />

                <EditText
                    android:id="@+id/editRotor_2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/ki3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ki" />

                <EditText
                    android:id="@+id/editRotor_2_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/kd3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kd:" />

                <EditText
                    android:id="@+id/editRotor_2_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/tf3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tf:" />

                <EditText
                    android:id="@+id/editRotor_2_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/roll"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Roll" />

                <TextView
                    android:id="@+id/kp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kp" />

                <EditText
                    android:id="@+id/editRotor_3_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/ki2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ki" />

                <EditText
                    android:id="@+id/editRotor_3_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/kd2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kd:" />

                <EditText
                    android:id="@+id/editRotor_3_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/tf2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tf:" />

                <EditText
                    android:id="@+id/editRotor_3_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/pitch"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pitch"
                    tools:text="Pitch" />

                <TextView
                    android:id="@+id/kp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kp" />

                <EditText
                    android:id="@+id/editRotor_4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/ki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ki" />

                <EditText
                    android:id="@+id/editRotor_4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/kd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kd:" />

                <EditText
                    android:id="@+id/editRotor_4_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <TextView
                    android:id="@+id/tf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tf:" />

                <EditText
                    android:id="@+id/editRotor_4_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number|numberDecimal"
                    android:digits="0123456789." />

                <Button
                    android:id="@+id/uploadDronConfiguration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UPLOAD DRON CONFIGURATION"
                    android:onClick="uploadDownloadConfiguration"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
